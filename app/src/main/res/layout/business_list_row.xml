<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mini_padding"
        app:contentPadding="@dimen/activity_card_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_card_margin">

            <ImageView
                android:id="@+id/business_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_panorama"
                android:scaleType="center"
                android:contentDescription="@string/icon_description" />

            <TextView
                android:id="@+id/business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/business_icon"
                android:layout_toRightOf="@+id/business_icon"
                android:textColor="@android:color/black"
                android:text="Azad Studio" />

            <TextView
                android:id="@+id/business_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/business_name"
                android:layout_alignLeft="@+id/business_name"
                android:layout_below="@+id/business_name"
                android:text="Railway Road Rewai" />

            <TextView
                android:id="@+id/created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Created By" />

            <com.client.therevgo.customviews.CustomTextView
                android:id="@+id/live_status"
                android:layout_width="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/activity_card_margin"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAllCaps="true"
                android:layout_below="@+id/business_address"
                android:textColor="@color/colorPrimary"
                android:text="Live" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>